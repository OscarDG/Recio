---
import '../styles/global.css';
import { Analytics } from '@vercel/analytics/react';
import {SpeedInsights} from '@vercel/speed-insights/react';

interface Props {
    title: string,
}

const { title } = Astro.props;
const description = 'Estudio creativo colombiano. Creamos marcas memorables y experiencias digitales que conectan y hacen crecer tu negocio.';
const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const orgSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "Recio - Estudio Creativo",
  url: canonical,
  logo: "/isologo_recio.png",
  contactPoint: [
    {
      "@type": "ContactPoint",
      contactType: "customer service",
      telephone: "+573174048898",
      areaServed: "CO",
      availableLanguage: "es"
    }
  ]
};
---
<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" />
        {canonical && (<link rel="canonical" href={canonical} />)}
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content={description} />
        <meta name="robots" content="index, follow" />
        <meta name="theme-color" content="#0a4433" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
		<meta property="og:site_name" content="Recio - Estudio Creativo" />
		<meta property="og:type" content="website" />
        {canonical && (<meta property="og:url" content={canonical} />)}
		<meta property="og:image" content="/isologo_recio.png" />
		<meta property="og:locale" content="es_CO" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content="/isologo_recio.png" />
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-W1XSZ0QN7Z"></script>
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-W1XSZ0QN7Z');
        </script>
        <title>{title}</title>
        <script type="application/ld+json">{JSON.stringify(orgSchema)}</script>
        <!-- Google Tag Manager -->
        <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0], j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);})(window,document,'script','dataLayer','GTM-K8GWT7P2');
        </script>
    </head>
    <body>
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-K8GWT7P2"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->
        <slot/>
        <Analytics />
        <SpeedInsights />   
    </body>
</html>
<style>
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
