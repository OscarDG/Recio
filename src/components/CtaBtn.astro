---
interface Props {
    text?: string,
    link?: string,
    variant?: 'primary' | 'secondary',
    responsive?: string,
    size?: 'small' | 'medium' | 'large',
    }

const { text, link, variant, responsive, size } = Astro.props;
---

<a href={link} target="_blank" class={`${responsive} flex justify-center items-center mx-4 rounded-xl shadow-md ${variant === 'primary' ? 'bg-main-green text-white hover:text-light-green' : 'text-main-green hover:text-light-green bg-none border-2 border-solid border-main-green'} ${size === 'small' ? 'w-20 h-5 font-medium text-sm' : size === 'medium' ? 'w-30 h-10 font-medium text-md' : 'w-50 h-15 font-medium text-lg'}`}>{text}</a>